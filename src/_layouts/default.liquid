    {% render "head"
      , metadata: site.metadata
      , data: data %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    {% render "navbar"
      , metadata: site.metadata
      , resource: resource
      , data: data %}

    <main>
      {{ content }}
    </main>

    {% render "footer"
      , metadata: site.metadata %}
  </body>
</html>
